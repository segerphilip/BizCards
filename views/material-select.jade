extends layout
block head
  script(type='text/javascript').
    $(document).ready(function(){
      $('.design-preview').click(function(){
        $('#material').val($(this).val());
      });
      //This is an IE fix because pointer-events does not work in IE
      $(document).on('mousedown', 'canvas', function (e) {
          console.log('hi');
          $(this).hide();
          var BottomElement = document.elementFromPoint(e.clientX, e.clientY);
          console.log(BottomElement);
          $(this).show();
          $(BottomElement).trigger('click'); //Manually fire the event for desired underlying element
          return false;

      });
    })
    
  style(type='text/css').
    .design-preview{
      width: 400px;
      height: 229px;
      color: black;
      background:url('#{filepath}') no-repeat center center;
      -webkit-filter: grayscale(100%);  
      -webkit-filter: grayscale(1);  
      filter: grayscale(100%);  
      filter: url('../img/grey.svg#grayscale');  
      filter: gray;  
      -webkit-background-size: contain;
      -moz-background-size: contain;
      -o-background-size: contain;
      background-size: contain;
    }
    .overlay{
      position: absolute;
      width: 400px;
      height: 229px;
      left: 0px;
      top: 0px;
      opacity: 0.5;
      z-index: 9;
    }
    #cherry-overlay{
      background: url('/images/cherry.jpg') no-repeat;
    }
    #walnut-overlay{
      background: url('/images/walnut.jpg') no-repeat;
    }
    #birch-overlay{
      background: url('/images/birch.jpg') no-repeat;
    }
    #cardstock-overlay{
      background: white;
    }
    .material-div{
      margin-right: 10px;
      margin-bottom: 10px;
      height: 229px;
      width: 400px;
      position: relative;
      float: left;
    }
    #helpdiv{
      float: left;
    }
    
block content
  h3 Select Your Material: 
  form#material-form(action='/confirm', method='post')
    input#material(type='hidden', name='material', value='invalid')
    div.material-div
      canvas#cherry-overlay.overlay
      input.design-preview(type='submit', src='//:0', value='Cherry', alt='Cherry')
    div.material-div
      canvas#walnut-overlay.overlay
      input.design-preview(type='submit', src='//:0', value='Walnut', alt='Walnut')
    div.material-div
      canvas#birch-overlay.overlay
      input.design-preview(type='submit', src='//:0', value='Birch', alt='Birch')
    div.material-div
      canvas#cardstock-overlay.overlay
      input.design-preview(type='submit', src='//:0', value='Cardstock', alt='Cardstock')
    div#helpdiv
      input#helpcheck(type='checkbox', name='appearance', value ='no') 
      | My card design looks as expected (leave unchecked and we will contact you at the above email to help you)