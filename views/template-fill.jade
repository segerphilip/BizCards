extends layout
block head
  style(type='text/css').
    #column1, #column2 {
      float: left;
      width: auto;
      margin-right: 25px;
    }
block content
  h3 Fill Out Your Information
  h4 Selected Design
  p
    img(src='#{image}', style='width:400px;height:229px')
  form#upload-form(action='/material-select', method='post')
    div#column1
      p
        | Name (Required)
        br
        input#name-field(type='text', name='name', size='34' required)
      p
        | Email Address (Required)
        br
        input#email-field(type='text', name='email', size='34' required)
      p
        | Title
        br
        input#title-field(type='text', name='title', size='34')
      p
        | Address Line 1
        br
        input#address1-field(type='text', name='address1', size='34')
      p
        | Address Line 2
        br
        input#address2-field(type='text', name='address2', size='34')
    div#column2
      p
        | Phone Number
        br
        input#phone-field(type='text', name='phone', size='34')
      p
        | Website
        br
        input#website-field(type='text', name='website', size='34')
      p
        | Other 1
        br
        input#other1-field(type='text', name='other1', size='34')
      p
        | Other 2
        br
        input#other2-field(type='text', name='other2', size='34')
      p
        | Other 3
        br
        input#other3-field(type='text', name='other3', size='34')
      input.btn.btn-lg.btn-primary(type='submit' value='Submit')